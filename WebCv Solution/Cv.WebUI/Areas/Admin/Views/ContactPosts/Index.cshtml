@model IEnumerable<ContactPost>

@{
    ViewData["Title"] = "Index";
}


<h1>Index</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerDate)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.DeletedDate)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            string answer = "You have not answer";
        }
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td class="overflow">
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td class="overflow">
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @if (item.AnswerDate == null)
                {
                    @answer
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.AnswerDate)
                }
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                @if (item.AnswerDate == null)
                {
                  
                    <a asp-action="Reply" asp-route-id="@item.Id" class="btn btn-warning">Reply</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>

