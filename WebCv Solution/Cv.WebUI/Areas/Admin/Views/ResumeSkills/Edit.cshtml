@model ResumeSkill


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Skills</h4>
<hr />

<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Bootstrap Border Sizes</h4>
                        <span>
                            lorem ipsum dolor sit amet, consectetur adipisicing
                            elit
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item" style="float: left;">
                            <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item" style="float: left;">
                            <a asp-action="index">Skills</a>
                        </li>
                        <li class="breadcrumb-item" style="float: left;">
                            <span>Edit</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Basic Form Inputs</h5>
                        <span>
                            Add class of <code>.form-control</code> with
                            <code>&lt;input&gt;</code> tag
                        </span>


                        <div class="card-header-right">
                            <i class="icofont icofont-spinner-alt-5"></i>
                        </div>

                    </div>
                    <form method="post" autocomplete="off" enctype="multipart/form-data">
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ResumeCategoryId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <select asp-for="ResumeCategoryId" class="form-control" asp-items="ViewBag.ResumeCategoryId"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Level" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Level" class="form-control" />
                                <span asp-validation-for="Level" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="Description" class="form-control" id="details"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12 d-flex justify-content-end">
                                @if (Model.View == null)
                                {
                                    <a class="btn btn-sm btn-secondary text-white mr-2" onclick="changeView(@Model.Id, '@Model.Name')">DisplayTag</a>
                                }
                                else if (Model.View != null)
                                {
                                    <a class="btn btn-sm btn-secondary text-info mr-2" onclick="changeView(@Model.Id, '@Model.Name')">DisplayBar</a>
                                }
                                <button class="btn btn-primary mr-2">Save</button>
                                <a asp-action="index" class="btn btn-info">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section addjs {
    <script class="removeable" src="~/libs/ckeditor5/ckeditor.min.js"></script>
    <script class="removeable" src="~/libs/select2/dist/js/select2.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="~/libs/sweetalert/sweetalert.min.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#details'))
            .catch(error => {
                console.error(error);
            });

    </script>
    <script>
        function changeView(id, name) {
            swal(`Are you sure you want to publish ${name}?`, {
                title: "Diqqet!",
                text: `Are you sure you want to change view of ${name}?`,
                icon: "warning",
                buttons: true,
                dangerMode: true,
                buttons: ["No", "Yes"]
            })
                .then((value) => {

                    if (value == true) {

                        let vToken = $('[name=__RequestVerificationToken]').val();

                        let formData = new FormData();
                        formData.set('__RequestVerificationToken', vToken);
                        formData.set('id', id);

                        $.ajax({
                            url: `@Url.Action("ViewSkill")`,
                            type: 'POST',
                            data: formData,
                            contentType: false,
                            processData: false,
                            success: function (response) {
                                console.log(response)
                                if (response.error == true) {
                                    toaster.error(response.message, "Xeta");
                                    return;
                                }
                                location.reload();
                            },
                            error: function (errorResponse) {
                                console.error(errorResponse);
                            }
                        });
                    }


                });

        }
    </script>
}
    @section addcss{
    <link rel="stylesheet" href="~/libs/select2/dist/css/select2.min.css" />

}

